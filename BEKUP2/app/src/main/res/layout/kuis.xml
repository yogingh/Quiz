<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#007BFF"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/gbr"
            android:layout_marginLeft="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:src="@drawable/menu"
            />

        <ImageView
            android:id="@+id/location"
            android:layout_marginLeft="0dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical"
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:src="@drawable/vert"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="#007BFF"
        android:layout_height="120dp"
        android:paddingTop="10dp"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/profile"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/natalie_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="48sp"
                android:textColor="#fff"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="$0.00" />

            <TextView
                android:id="@+id/natalie_text_view1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#fff"
                android:layout_marginLeft="15dp"
                android:text="Set Up Wallet Balance" />
            </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#007BFF"
        android:paddingBottom="10dp"
        >
        <Button
            android:layout_width="170dp"
            android:layout_height="35dp"
            android:onClick="decrement"
            android:layout_marginLeft="15dp"
            android:text="Send Money"
            android:background="#fff"
            android:textColor="#007BFF"/>

        <Button
            android:layout_width="170dp"
            android:layout_height="35dp"
            android:onClick="decrement"
            android:layout_marginLeft="15dp"
            android:text="Request Money"
            android:background="#fff"
            android:textColor="#007BFF"/>
    </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/image1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/profile" />

            <TextView
                android:id="@+id/text1"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="60dp"
                android:textSize="20sp"
                android:text="Judy's Spainsh Restaurant" />

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Make purchasing just by tapping your phone at select merchant"
                android:textAppearance="?android:textAppearanceMedium"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:paddingLeft="60dp"
                android:textSize="14dp"
                android:layout_marginTop="40dp"
                />
        </RelativeLayout>

        <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/image3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/text3"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="60dp"
            android:textSize="20sp"
            android:text="Judy's Spainsh Restaurant" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make purchasing just by tapping your phone at select merchant"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:paddingLeft="60dp"
            android:textSize="14dp"
            android:layout_marginTop="40dp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/image5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/text5"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="60dp"
            android:textSize="20sp"
            android:text="Judy's Spainsh Restaurant" />

        <TextView
            android:id="@+id/text6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make purchasing just by tapping your phone at select merchant"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:paddingLeft="60dp"
            android:textSize="14dp"
            android:layout_marginTop="40dp"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/image5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/profile" />

        <TextView
            android:id="@+id/text5"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="60dp"
            android:textSize="20sp"
            android:text="Judy's Spainsh Restaurant" />

        <TextView
            android:id="@+id/text6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Make purchasing just by tapping your phone at select merchant"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:paddingLeft="60dp"
            android:textSize="14dp"
            android:layout_marginTop="40dp"
            />

    </RelativeLayout>
</LinearLayout>
